// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

// Model 定義
enum Role {
  USER
  ADMIN
}

enum Lang {
  KO
  JA
} 
enum ContryCode {
  KO
  JP
}

model User {
    id                 Int        @id @default(autoincrement())
    role               Role       @default(USER)
    createdAt          DateTime   @default(now())
    email              String     @unique
    password           String     
    alarmEnabled       Boolean    @default(false)
    preferredPrice     Int        @default(0)
    destination        Lang
    displayLanguage    Lang
    dashboardLayout    String
    favoriteAirlines   FavoriteAirline[]
}

enum AirlineSeviceType {
  lcc
  fsc
  hsc
  else
}
model Airline {
    id                 Int        @id @default(autoincrement())
    title              String 
    detailTitle        String 
    iata               String
    icao               String
    seviceType         AirlineSeviceType
    flight             Flight[]
    favoriteAirlines   FavoriteAirline[]
}

model FavoriteAirline{
    userId             Int 
    user               User       @relation(fields: [userId],references: [id])
    airlineId          Int
    airline            Airline    @relation(fields: [airlineId], references: [id])

    @@id([userId,airlineId])
}

model Airport {
  id                   Int        @id @default(autoincrement()) 
  titleEn              String     
  titleJa              String
  titleKo              String
  iata                 String
	icao                 String
	latitude             String
	longitude            String
	cityNameEn           String     
	cityNameJa           String     
	cityNameKo           String     
	countryNameEn        String    
	countryNameJa        String    
	countryNameKo        String    
	countryCode          ContryCode
	address              String   
  link                 String   
  flightsAsDeparture   Flight[]   @relation(name: "departureAirport")
  flightsAsArrival     Flight[]   @relation(name: "arrivalAirport")
}

model Flight {
  id                   Int        @id @default(autoincrement())	
	airlineId            Int 
  airline              Airline    @relation(fields: [airlineId], references: [id])
  departureAirport     Airport    @relation(name: "departureAirport",fields: [departureAirportId], references: [id])
	departureAirportId   Int    
  departureTerminal    String   
  departureGate        String
  departureDate        DateTime 
  arrivalAirport       Airport    @relation(name: "arrivalAirport",fields: [arrivalAirportId], references: [id])
  arrivalAirportId     Int
  arrivalTerminal      String 
  arrivalgate          String
  arrivalDate          String
  price                Int        @default(0)
}


enum AirType { 
  airports
  airlines
}
model AirUpdateHistory {
  id                   Int        @id @default(autoincrement())
  airType              AirType
  updatedAt            DateTime
}